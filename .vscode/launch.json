    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "main process",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "."
        },
        {
            "type": "node",
            "request": "attach",
            "name": "attach process",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "processId": "${command:PickProcess}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "miniclient",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/client/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors"
            ],
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test answer",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test/answer.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test database",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test/database.js"
        }
    ]
}